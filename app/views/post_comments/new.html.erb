
  <div class="container">
    <div class="row">
      <div class="col-lg-3"></div>
      <div class="col-lg-6 text-center">

        <% if @post_comment.errors.any? %>
          <ul>
            <h4><%= flash[:alert] %></h4>
            <% @post_comment.errors.full_messages.each do |msg| %>
              <li><%= msg %></li>
            <% end %>
          </ul>
        <% end %>

        <%= form_with(model: [@post, @post_comment], local: true) do |f| %>
            <%= f.text_field :title, class: "post-title", placeholder: "タイトル(35字以内)" %><br>
            <%= f.text_area :comment, class: "comment",placeholder: "この投稿にコメントをしよう！(300字以内)" %><br>
            <%= f.submit "送信する", data: {disable_with: "submitting..."} %>
        <% end %>

      </div>
    </div>
  </div>
