
  <% posts.each do |post| %>
    <h3>
      <%= link_to post_path(post.id), class: "link" do %>
        <%= post.post_title %><br>
      <% end %>
    </h3>
    <%= link_to post_path(post.id) do %>
      <%= attachment_image_tag post, :post_image, align: "left", class: "img item-img" %><br>
    <% end %>
    <h4>カテゴリー:<%= post.category.category_name %></h4><br>
    <h4>評価:<%= post.rate %>点</h4><br clear="left">
  <% end %>
