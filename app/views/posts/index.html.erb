
  <div class="container">
    <div class="row">

      <%= render 'homes/list' %>

      <div class="col-md-5 list">

        <% if params[:id] %>
          <h2><%= @category.category_name %></h2>
        <% else %>
          <h2>全て</h2>
        <% end %>

        <% @posts.each do |post| %>
          <div class="item">
            <%= link_to post_path(post.id) do %>
              <%= attachment_image_tag post, :post_image, size: "200x200", align: "left", class: "img item-img" %><br>
              <h3 class="link"><%= post.post_title %></h3>
            <% end %>
            <p><%= post.category.category_name %>|<%= post.rate %>点</p><br clear="left">
          </div>
        <% end %>

        <%= paginate @posts, class: "paginate" %>

      </div>
    </div>
  </div>
