
  <div class="container">
  	<div class="row">
      <%= render 'homes/left_list' %>
  		<div class="col-md-8">
  			 <% if params[:id] %>
  					<h2><%= @category.category_name %>（全<%= @posts.count %>件）</h2>
  			 <% else %>
  					<h2>全て（全<%= @posts.count %>件）</h2>
  			 <% end %>
        <% @posts.each do |post| %>
        <%= link_to post_path(post.id) do %>
          <%= attachment_image_tag post, :post_image, size: "200x200", align: "left" %><br>
          <h3><%= post.post_title %></h3>
        <% end %>
          <p></p>
          <p><%= post.category.category_name %>|<%= post.rate %>点</p><br clear="left">
        <% end %>
  		</div>
  		<%#= paginate @post_page, class: "paginate" %>
  	</div>
  </div>
