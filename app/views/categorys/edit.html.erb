
  <div class="comtainer">
    <div class="row">
      <div class="col-lg-3"></div>
      <div class="col-lg-6 text-center">
        <h2>カテゴリー編集</h2>

          <% if @category.errors.any? %>
            <ul>
              <h4><%= flash[:alert] %></h4>
              <% @category.errors.full_messages.each do |msg| %>
                <li><%= msg %></li>
              <% end %>
            </ul>
          <% end %>

          <%= form_with(model: @category, url: category_path, local: true) do |f| %>
            <p>新しいカテゴリー名: <%= f.text_field :category_name, value: "", placeholder:"カテゴリー名" %><p>
            <%= f.submit "変更を保存する", :class=>"btn" %>
          <% end %>
      </div>
    </div>
  </div>
