
  <div class="container">
    <div class="row">
      <div class="col-lg-3"></div>
      <div class="col-lg-6">
        <h2>フォロー中</h2>
          <table class="table">
            <tbody>
              <% @users.each do |user| %>
                  <tr>
                    <td>  <%= user.user_name %> </td>
                    <td>フォロー数：<%= user.followings.count %></td>
                    <td>フォロワー数：<%= user.followers.count %></td>
                    <td><%= render 'relationships/follow', user: user %></td>
                    <td><%= link_to 'Show', user_path(user) %></td>
                  </tr>
              <% end %>
            </tbody>
          </table>
      </div>
    </div>
  </div>
