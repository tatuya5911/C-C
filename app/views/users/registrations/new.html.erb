<div class="container">
  <div class="row">
    <div class="col-lg-3"></div>
    <div class="col-lg-6 text-center">

      <h2>新規登録</h2>

        <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
          <%= render "devise/shared/error_messages", resource: resource %>
          <%= f.text_field :user_name, autocomplete: "user_name", placeholder: "ニックネーム(15字以内)", size: "50" %><br>
          <%= f.email_field :email, autocomplete: "email", placeholder: "メールアドレス", size: "50" %><br>
          <%= f.password_field :password, autocomplete: "new-password", placeholder: "パスワード(半角英数字のみ)", size: "50" %><br>
          <%= f.password_field :password_confirmation, autocomplete: "new-password", placeholder: "パスワード（確認用）", size: "50" %><br>
          <p>※すべて必須項目なのでご記入よろしくお願いします</p>
          <%= f.submit "利用規約に同意して新規登録を行う" %>
        <% end %>
    </div>
  </div>
</div>
