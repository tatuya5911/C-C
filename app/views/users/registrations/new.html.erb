<div class="container">
  <div class="row">
    <div class="col-lg-3"></div>
    <div class="col-lg-6 text-center">

      <h2>新規登録</h2>

        <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
          <% if resource.errors.any? %>
            <ul>
              <% resource.errors.full_messages.each do |message| %>
                <li><%= message %></li>
              <% end %>
            </ul>
          <% end %>
          <%= f.text_field :user_name, autocomplete: "user_name", class:"register-form", placeholder: "ニックネーム(15字以内)", size: "50" %><br>
          <%= f.email_field :email, autocomplete: "email", class:"register-form", placeholder: "メールアドレス", size: "50" %><br>
          <%= f.password_field :password, autocomplete: "new-password", class:"register-form", placeholder: "パスワード(半角英数字のみ)(6字以上)", size: "50" %><br>
          <%= f.password_field :password_confirmation, autocomplete: "new-password", class:"register-form", placeholder: "パスワード（確認用）", size: "50" %><br>
          <p>※すべて必須項目なのでご記入よろしくお願いします</p>
          <%= f.submit "新規登録", :class=>"btn" %>
        <% end %>
    </div>
  </div>
</div>
