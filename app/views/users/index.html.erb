
  <div class="container">
    <div class="row">
      <div class="col-lg-4"></div>
      <div class="col-lg-4 text-center">
        <h2>ユーザー一覧</h2>
        <table class="table table-bordered">
          <tbody>
            <% @users.each do |user| %>
              <tr>
                <td>
                  <%= link_to user_path(user.id), class: "link" do %>
                    <%= user.user_name %>
                  <% end %>
                  <%= link_to "強制退会", user_path(user.id), method: :delete, data: { confirm: '本当に強制退会させますか？' }, class: "btn btn-danger" %>
                </td>
              </tr>
            <% end %>
          </tbody>
        </table>

        <%= paginate @users %>

      </div>
    </div>
  </div>
