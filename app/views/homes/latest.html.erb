
  <div class="container">
    <div class="row">

      <%= render 'homes/list' %>

      <div class="col-md-10 text-left list">
        <h2>新着一覧</h2>
        <% @posts.each do |post| %>
          <h3>
            <%= link_to post_path(post.id), class: "link" do %>
              <%= post.post_title %><br>
            <% end %>
          </h3>
          <%= link_to post_path(post.id) do %>
            <%= attachment_image_tag post, :post_image, size: "200x200", align: "left", class: "img item-img" %><br>
          <% end %>
          <h4>カテゴリー:<%= post.category.category_name %></h4><br>
          <h4>評価:<%= post.rate %>点</h4><br clear="left">
        <% end %>

        <%= paginate @posts, class: "paginate" %>

      </div>
    </div>
  </div>
