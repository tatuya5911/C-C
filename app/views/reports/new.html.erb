
  <div class="container">
    <div class="row">
      <div class="col-lg-5"></div>
      <div class="col-lg-6">
        <%= form_with(model: @report, url: reports_path, local: true) do |f| %>
          <%= f.radio_button :body, :性的な内容 %>
          <%= f.label :性的なコンテンツ %><br>
          <%= f.radio_button :body, :暴力的または不快な内容 %>
          <%= f.label :暴力的または不快な内容 %><br>
          <%= f.radio_button :body, :差別的または攻撃的な内容 %>
          <%= f.label :差別的または攻撃的な内容 %><br>
          <% if params[:post_comment_id] %>
            <%= f.hidden_field :post_comment_id, value: @post_comment.id %>
          <% else %>
            <%= f.hidden_field :post_id, value: @post.id %>
          <% end %>
          <p>※上記にない場合、未選択で報告してください。</p>
          <%= f.submit '報告', class: "btn"%>
        <% end %>
      </div>
    </div>
  </div>
