
  <%= form_with(model: @report, url: reports_path, local: true) do |f| %>
    <%= f.radio_button :body, :性的な内容 %>
    <%= f.label :性的なコンテンツ %><br>
    <%= f.radio_button :body, :暴力的または不快な内容 %>
    <%= f.label :暴力的または不快な内容 %><br>
    <%= f.radio_button :body, :差別的または攻撃的な内容 %>
    <%= f.label :差別的または攻撃的な内容 %><br>
    <%= f.hidden_field :post_review_id, value: @post_review.id %>
    <%= f.submit '報告', class: "btn btn-info btn-sm"%>
  <% end %>
